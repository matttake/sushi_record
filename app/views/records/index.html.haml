.container-fluid
  .index.row
    - if user_signed_in? 
      .index__left.col-2
        .index__left__container
          .index__left__container__profile
            .index__left__container__profile__avatar
              - if current_user.avatar.url
                = image_tag current_user.avatar.url, height: '70px', width: '70px', class: 'avatar'
              - else
                = image_tag '/avatar.jpg', height: '70px', width: '70px', class: 'avatar'
            .index__left__container__profile__name
              = current_user.nickname
          .index__left__container__menu
            %ul
              %li=link_to("マイページ","/records/#{current_user.id}")
              %li=link_to("グラフ","#")
              %li=link_to("過去の記録詳細","#")
              -# %li=link_to("各種ランキング","#")
              -# %li=link_to("サイトの使い方","#")
              -# %li=link_to("いざ実践","#")
          .index__left__container__ranking


      .index__right.col-10
        = render "layouts/flash"
        .index__right__graph
          = area_chart @data.group_by_day(:created_at).sum(:price), width: "800px", height: "300px"

        = form_with(model: @record, local:true) do |form|
          .index__right__container
            .index__right__container__input
              %p コース
              = form.select :course,[["練習：お手軽"],["練習：お勧め"],["練習：高級"],["普通：お手軽"],["普通：普通"],["普通：高級"]], prompt: "コース選択"
            .index__right__container__input
              %p 金額
              = form.number_field :price
            .index__right__container__input
              %p 正しく打ったキーの回数
              = form.number_field :really_type
            .index__right__container__input
              %p 平均キータイプ数
              = form.number_field :avarage_type, step: "0.1"
            .index__right__container__input
              %p ミスタイプ数
              = form.number_field :miss_type
          = form.submit "送信", class: "submit"
          
    - else
      .index__left.col-3
        .index__left__container
          .index__left__container__profile
            .index__left__container__profile__avatar
              = image_tag '/avatar.jpg', height: '70px', width: '70px', class: 'avatar'
            .index__left__container__profile__name
              %p ゲスト
          .index__left__container__ranking
      .index__right.col-9
        = link_to "ログイン", new_user_session_path, class: "btn btn-secondary col-12",role:"button"
        = link_to "新規登録", new_user_registration_path, class: "btn btn-secondary col-12",role:"button"
        = link_to "使い方", landing_records_path, class: "btn btn-secondary col-12",role:"button"